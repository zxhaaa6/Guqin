{
  "name": "Guqin",
  "version": "0.0.1",
  "license": "MIT",
  "author": "BB",
  "main": "dist/main.js",
  "engines": {
    "node": "8.x"
  },
  "scripts": {
    "build": "webpack",
    "build:watch": "webpack --watch",
    "lint": "tslint --project ./tsconfig.json '{src,tests}/**/*.{ts,js}'",
    "precommit": "npm run prettify && npm run lint",
    "prettify": "prettier --write --single-quote --trailing-comma all --loglevel silent \"{src,tests}/**/*.{ts,js}\"",
    "start": "npm run build && node dist/main.js",
    "dev": "concurrently \"npm run build:watch\" \"node-dev dist/main.js\"",
    "initdb": "ts-node src/database/InitDb.ts"
  },
  "dependencies": {
    "@koa/cors": "^2.2.2",
    "bluebird": "^3.5.1",
    "dotenv": "^6.0.0",
    "formidable": "^1.2.0",
    "jsonwebtoken": "^8.3.0",
    "koa": "2.5.2",
    "koa-bodyparser": "^4.2.1",
    "koa-jwt": "^3.3.2",
    "koa-logger": "^3.2.0",
    "koa-router": "^7.4.0",
    "koa-session": "^5.8.2",
    "koa-static": "^5.0.0",
    "lodash": "^4.17.10",
    "log4js": "3.0.3",
    "moment": "^2.22.0",
    "mongoose": "^5.2.6",
    "redis": "^2.8.0",
    "serve-favicon": "^2.4.5",
    "uuid": "^3.2.1",
    "validator": "^9.4.1"
  },
  "devDependencies": {
    "@types/bluebird": "^3.5.22",
    "@types/faker": "^4.1.2",
    "@types/jsonwebtoken": "^7.2.8",
    "@types/koa-router": "^7.0.30",
    "@types/mongoose": "^5.2.3",
    "@types/uuid": "^3.4.3",
    "@types/redis": "^2.8.6",
    "awesome-typescript-loader": "^5.2.0",
    "clean-webpack-plugin": "^0.1.19",
    "concurrently": "^3.6.1",
    "faker": "^4.1.0",
    "husky": "^0.14.3",
    "node-dev": "^3.1.3",
    "prettier": "^1.12.1",
    "ts-node": "^7.0.0",
    "tslint": "^5.11.0",
    "tslint-config-prettier": "^1.14.0",
    "tslint-loader": "^3.6.0",
    "tslint-sonarts": "^1.7.0",
    "typescript": "2.9.2",
    "uglifyjs-webpack-plugin": "^1.2.5",
    "webpack": "^4.16.1",
    "webpack-cli": "^3.1.0",
    "webpack-node-externals": "^1.7.2"
  },
  "husky": {
    "hooks": {
      "pre-commit": "npm run precommit",
      "pre-": "npm run precommit",
      "pre-push": "npm run prettify && npm run lint",
      "pre-rebase": "npm run prettify && npm run lint"
    }
  }
}
